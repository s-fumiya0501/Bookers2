<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog"%>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book_u, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title ,class:"form-control book_title"%>
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label>
            <%= f.text_area :body,class:"form-control book_body"%>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book' ,class:"btn btn-success"%>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= link_to attachment_image_tag(@book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:"40x40"),user_path(@book.user.id)%><br><%= link_to @user.name,user_path(@book.user.id) %></td>
              <td><%= link_to @book.title ,book_path(@book.id)%></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    <div class="fas fa-heart like"><%= @book.favorites.count %></div>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    <div class="fas fa-heart unlike"><%= @book.favorites.count %></div>
                  <% end %>
                <% end %>
              </td>
              <td>コメント数：<%= @book.book_comments.count %></td>
              <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-sm btn-success"%></td>
                <td><%= link_to "Destroy", book_path(@book.id),method: :delete,class:"btn btn-sm btn-danger", data: { confirm: '本当に消しますか' }%></td>
              <% end %>
            </tr>
          </tbody>

      　</table>
      　<h2>Comments</h2>
      　<table class="table">
      　   <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td><%= link_to attachment_image_tag(book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:"40x40"),user_path(book_comment.user.id)%></td>
                <td><%= book_comment.user.name %></td>
                <td><%= book_comment.comment %></td>
                <td>
                  <% if book_comment.user == current_user %>
                    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete ,class:"btn btn-sm btn-danger", data: { confirm: '本当に消しますか' }%>
                  <% end %>
                </td>
              </tr>
            <% end %>
      　   </tbody>
      　</table>

          <h2>New Comment</h2>
          <% if @error_comment.present? %>
          <div id="error_explanation">
            <% if @error_comment.errors.any? %>
              <h3><%= @error_comment.errors.count %> error prohibited this obj from being saved:</h3>
              <ul>
                <% @error_comment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
          <% end %>
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
            <div class="form-group"><%= f.text_area :comment,placeholder: "コメントをここに",class:"form-control" %></div>
            <div class="form-group"><%= f.submit "送信",class:"btn btn-success"%></div>
          <% end %>




      </div>
    </div>
  </div>
</main>